<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet  id="20230831_mssql_create_table.xml" author="MING.YUEN" dbms="mssql">
        <createTable tableName="Product">
            <column name="id" autoIncrement="true"  type="BIGINT">          <constraints nullable="true" primaryKey="true"/></column>
            <column name="sku"                      type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="name"                     type="varchar(255)"/>
            <column name="region"                   type="varchar(255)"/>
            <column name="activeDate"               type="date"/>
            <column name="tx_version"               type="INT">             <constraints nullable="false"/></column>
            <column name="creator"                  type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"            type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"                 type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"        type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="Product_D1" tableName="Product" unique="true">
            <column descending="true" name="sku"/>
        </createIndex>
        <createTable tableName="user_info">
            <column name="id" autoIncrement="true"  type="BIGINT">          <constraints nullable="true" primaryKey="true"/></column>
            <column name="user_name"                type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="first_name"               type="varchar(255)"/>
            <column name="last_name"                type="varchar(255)"/>
            <column name="pwd"                      type="varchar(255)"/>
            <column name="gender"                   type="varchar(255)"/>
            <column name="email"                    type="varchar(255)"/>
            <column name="phone"                    type="varchar(255)"/>
            <column name="role_level"               type="INT"/>
            <column name="resign_date"              type="date"/>
            <column name="tx_version"               type="INT">             <constraints nullable="false"/></column>
            <column name="creator"                  type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"            type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"                 type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"        type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="user_info_D1" tableName="user_info" unique="true">
            <column descending="true" name="user_name"/>
            <column descending="true" name="modification_time"/>
        </createIndex>
        <createTable tableName="user_info_pending">
            <column name="id" autoIncrement="true"  type="BIGINT">          <constraints nullable="true" primaryKey="true"/></column>
            <column name="user_name"                type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="first_name"               type="varchar(255)"/>
            <column name="last_name"                type="varchar(255)"/>
            <column name="pwd"                      type="varchar(255)"/>
            <column name="gender"                   type="varchar(255)"/>
            <column name="email"                    type="varchar(255)"/>
            <column name="phone"                    type="varchar(255)"/>
            <column name="role_level"               type="INT"/>
            <column name="status"                   type="INT"/>
            <column name="tx_version"               type="INT">             <constraints nullable="false"/></column>
            <column name="creator"                  type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"            type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"                 type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"        type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="user_info_pending_D1" tableName="user_info_pending">
            <column descending="true" name="user_name"/>
            <column descending="true" name="modification_time"/>
        </createIndex>
        <createTable tableName="user_role">
            <column name="id" autoIncrement="true"  type="BIGINT">          <constraints nullable="true" primaryKey="true"/></column>
            <column name="name"                     type="varchar(255)"/>
            <column name="role_level"               type="INT"/>
            <column name="tx_version"               type="INT">             <constraints nullable="false"/></column>
            <column name="creator"                  type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"            type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"                 type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"        type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="userRole_D1" tableName="user_role" unique="true">
            <column descending="true" name="name"/>
        </createIndex>
        <createTable tableName="menu_structure">
            <column name="id" autoIncrement="true"  type="BIGINT">          <constraints nullable="true" primaryKey="true"/></column>
            <column name="parent"                   type="varchar(255)"/>
            <column name="icon"                     type="varchar(255)"/>
            <column name="name"                     type="varchar(255)"/>
            <column name="roleId"                   type="INT"/>
            <column name="tx_version"               type="INT">             <constraints nullable="false"/></column>
            <column name="creator"                  type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"            type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"                 type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"        type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="menu_structure_D1" tableName="menu_structure" unique="true">
            <column descending="true" name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet  id="20230831_create_table_product.xml" author="MING.YUEN">
        <createTable tableName="Product">
            <column name="uid"                  type="BIGINT">          <constraints nullable="false" primaryKey="true"/></column>
            <column name="sku"                  type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="name"                 type="varchar(255)"/>
            <column name="region"               type="varchar(255)"/>
            <column name="activeDate"           type="date"/>
            <column name="creator"              type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"        type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"             type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"    type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="Product_D1" tableName="Product" unique="true">
            <column descending="true" name="sku"/>
        </createIndex>
        <createTable tableName="users">
            <column name="uid"                  type="BIGINT">          <constraints nullable="false" primaryKey="true"/></column>
            <column name="username"             type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="firstName"            type="varchar(255)"/>
            <column name="lastName"             type="varchar(255)"/>
            <column name="password"             type="varchar(255)"/>
            <column name="gender"               type="varchar(255)"/>
            <column name="email"                type="varchar(255)"/>
            <column name="phone"                type="varchar(255)"/>
            <column name="roleId"               type="varchar(255)"/>
            <column name="creator"              type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"        type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"             type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"    type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="users_D1" tableName="users" unique="true">
            <column descending="true" name="username"/>
        </createIndex>
        <createTable tableName="userRole">
            <column name="uid"                  type="BIGINT">          <constraints nullable="false" primaryKey="true"/></column>
            <column name="name"                 type="varchar(255)"/>
            <column name="roleLevel"            type="varchar(255)"/>
            <column name="creator"              type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"        type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"             type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"    type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="userRole_D1" tableName="userRole" unique="true">
            <column descending="true" name="name"/>
        </createIndex>
        <createTable tableName="menu_structure">
            <column name="uid"                  type="BIGINT">          <constraints nullable="false" primaryKey="true"/></column>
            <column name="parent"               type="varchar(255)"/>
            <column name="icon"                 type="varchar(255)"/>
            <column name="name"                 type="varchar(255)"/>
            <column name="roleId"               type="INT"/>
            <column name="creator"              type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="creation_time"        type="datetime">        <constraints nullable="false"/></column>
            <column name="modifier"             type="varchar(255)">    <constraints nullable="false"/></column>
            <column name="modification_time"    type="datetime">        <constraints nullable="false"/></column>
        </createTable>
        <createIndex indexName="menu_structure_D1" tableName="menu_structure" unique="true">
            <column descending="true" name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.order.dao.SaleMapper">
    <select id="findByOrderIdIn" resultType="java.lang.String" parameterType="java.util.List">
        select order_id from sales_order where order_id in
        <foreach collection="salesOrders" item="salesOrder" open="(" separator="," close=")">
            #{salesOrder.orderId}
        </foreach>
    </select>
    <insert id="insert">
        INSERT INTO sales_order (order_id, tx_datetime,store_code,customer_name,sales_person,total_amount,discount,payment_method,status,priority,shipping_method,shipping_address,order_source,order_type,remark,created_by,created_at,updated_by,updated_at,version) VALUES
<!--        <foreach item="order" collection="salesOrders" separator=",">-->
            (#{param.orderId}, #{param.txDatetime},#{param.storeCode},#{param.customerName},#{param.salesPerson},#{param.totalAmount},#{param.discount},#{param.paymentMethod},#{param.status},#{param.priority},#{param.shippingMethod},#{param.shippingAddress},#{param.orderSource},#{param.orderType},#{param.remark},#{param.createdBy},#{param.createdAt},#{param.updatedBy},#{param.updatedAt},#{param.version})
<!--        </foreach>-->
    </insert>
</mapper>